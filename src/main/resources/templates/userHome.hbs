<!DOCTYPE html>
<html>
  <head>
    <title>{{ username }}'s Image Gallery</title>
    <meta charset="utf-8"/>
    <style>
      img {
        height: 20%;
        width: 20%;
      }
    </style>
  </head>
  <body>
    <p><h1>{{ username }}'s Images:</h1></p>
    <p>Click image to view.</p>
      {{#each images }}
      <div class="image">
        <a href="/{{ username }}/images/{{ uuid }}" border="0"><img src="data:image/png;base64,{{ imagedata }}"/></a>
      </div>
      <form action="/{{ username }}/images/{{ uuid }}" method="POST">
        <input type="submit" value="Delete" />
      </form>
      <p></p>
      {{/ each }}
    <br />
    <p><h3>Upload Image:</h3></p>
      <div class="addimage">
        <form action="/{{ username }}/images" method="POST" enctype="multipart/form-data">
          <input type="file" name="imagedata" accept="image/*" />
          <br /><br />
          <p><input type="submit" value="Upload Image" /></p>
        </form>
      </div>
  </body>
</html>
